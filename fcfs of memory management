#include <stdio.h>

int main() {
    int frames, pages, i, j, k = 0, faults = 0;
    int frame[10], page[30], flag, found;

    printf("Enter number of frames: ");
    scanf("%d", &frames);

    printf("Enter number of pages: ");
    scanf("%d", &pages);

    printf("Enter the reference string (pages):\n");
    for (i = 0; i < pages; i++) {
        scanf("%d", &page[i]);
    }

    // Initialize frames with -1 (empty)
    for (i = 0; i < frames; i++) {
        frame[i] = -1;
    }

    printf("\nPage Reference String -> Frame Status\n");

    for (i = 0; i < pages; i++) {
        flag = 0;
        // Check if page already exists in frame
        for (j = 0; j < frames; j++) {
            if (frame[j] == page[i]) {
                flag = 1; // Page hit
                break;
            }
        }

        // Page Fault
        if (flag == 0) {
            frame[k] = page[i];   // Replace oldest page
            k = (k + 1) % frames; // Circular index
            faults++;
        }

        // Print current frame status
        printf("%2d -> ", page[i]);
        for (j = 0; j < frames; j++) {
            if (frame[j] != -1)
                printf("%2d ", frame[j]);
            else
                printf(" - ");
        }
        if (flag == 0)
            printf("  (Page Fault)");
        else
            printf("  (Page Hit)");
        printf("\n");
    }

    printf("\nTotal Page Faults = %d\n", faults);

    return 0;
}
