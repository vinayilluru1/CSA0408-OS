#include <stdio.h>
#include <stdlib.h>
#include <dirent.h>

int main() {
    DIR *d;
    struct dirent *dir;

    d = opendir(".");  // open current directory
    if(d == NULL) {
        printf("Could not open current directory.\n");
        return 1;
    }

    printf("Files and directories in current directory:\n");
    while((dir = readdir(d)) != NULL) {
        printf("%s\n", dir->d_name);
    }

    closedir(d);
    return 0;
}
