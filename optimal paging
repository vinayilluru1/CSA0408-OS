#include <stdio.h>

int findOptimal(int pages[], int frame[], int n, int index, int frames) {
    int i, j, pos = -1, farthest = index;
    
    for (i = 0; i < frames; i++) {
        int found = 0;
        for (j = index; j < n; j++) {
            if (frame[i] == pages[j]) {
                if (j > farthest) {
                    farthest = j;
                    pos = i;
                }
                found = 1;
                break;
            }
        }
        if (found == 0)  // Page not used again -> best to replace
            return i;
    }
    return (pos == -1) ? 0 : pos;
}

int main() {
    int frames, pagesCount, pages[30], frame[10];
    int i, j, k, pos, faults = 0, flag1, flag2;

    printf("Enter number of frames: ");
    scanf("%d", &frames);

    printf("Enter number of pages: ");
    scanf("%d", &pagesCount);

    printf("Enter the reference string:\n");
    for (i = 0; i < pagesCount; i++) {
        scanf("%d", &pages[i]);
    }

    for (i = 0; i < frames; i++) {
        frame[i] = -1;
    }

    printf("\nPage Reference String -> Frame Status\n");

    for (i = 0; i < pagesCount; i++) {
        flag1 = flag2 = 0;

        // Check if page already in frame (Hit)
        for (j = 0; j < frames; j++) {
            if (frame[j] == pages[i]) {
                flag1 = flag2 = 1;
                break;
            }
        }

        // Page not present -> Page Fault
        if (flag1 == 0) {
            for (j = 0; j < frames; j++) {
                if (frame[j] == -1) { // Empty frame
                    faults++;
                    frame[j] = pages[i];
                    flag2 = 1;
                    break;
                }
            }
        }

        // No empty frame -> Use OPTIMAL replacement
        if (flag2 == 0) {
            pos = findOptimal(pages, frame, pagesCount, i + 1, frames);
            frame[pos] = pages[i];
            faults++;
        }

        // Print frame status
        printf("%2d -> ", pages[i]);
        for (j = 0; j < frames; j++) {
            if (frame[j] != -1)
                printf("%2d ", frame[j]);
            else
                printf(" - ");
        }
        if (flag1 == 1)
            printf(" (Page Hit)\n");
        else
            printf(" (Page Fault)\n");
    }

    printf("\nTotal Page Faults = %d\n", faults);

    return 0;
}
