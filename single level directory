#include <stdio.h>
#include <string.h>
#include <stdlib.h>

struct {
    char fname[20];
} dir;

struct {
    char dname[20];
    char fname[20][20];
    int fcount;
} directory;

int main() {
    int ch;
    char f[20];

    strcpy(directory.dname, "root");
    directory.fcount = 0;

    while (1) {
        printf("\n\n---- Single Level Directory ----\n");
        printf("1. Create File\n");
        printf("2. Delete File\n");
        printf("3. Search File\n");
        printf("4. Display Files\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &ch);

        switch (ch) {
        case 1:
            printf("Enter file name: ");
            scanf("%s", f);
            int exists = 0;
            for (int i = 0; i < directory.fcount; i++) {
                if (strcmp(f, directory.fname[i]) == 0) {
                    exists = 1;
                    break;
                }
            }
            if (exists)
                printf("File already exists!\n");
            else {
                strcpy(directory.fname[directory.fcount], f);
                directory.fcount++;
                printf("File created.\n");
            }
            break;

        case 2:
            printf("Enter file name to delete: ");
            scanf("%s", f);
            int found = 0;
            for (int i = 0; i < directory.fcount; i++) {
                if (strcmp(f, directory.fname[i]) == 0) {
                    found = 1;
                    strcpy(directory.fname[i], directory.fname[directory.fcount - 1]);
                    directory.fcount--;
                    printf("File deleted.\n");
                    break;
                }
            }
            if (!found)
                printf("File not found!\n");
            break;

        case 3:
            printf("Enter file name to search: ");
            scanf("%s", f);
            found = 0;
            for (int i = 0; i < directory.fcount; i++) {
                if (strcmp(f, directory.fname[i]) == 0) {
                    found = 1;
                    printf("File found in directory.\n");
                    break;
                }
            }
            if (!found)
                printf("File not found!\n");
            break;

        case 4:
            if (directory.fcount == 0)
                printf("Directory is empty.\n");
            else {
                printf("Directory: %s\n", directory.dname);
                for (int i = 0; i < directory.fcount; i++)
                    printf("%s\n", directory.fname[i]);
            }
            break;

        case 5:
            exit(0);

        default:
            printf("Invalid choice.\n");
        }
    }
    return 0;
}
