#include <stdio.h>

int findLRU(int time[], int n) {
    int i, min = time[0], pos = 0;
    for (i = 1; i < n; i++) {
        if (time[i] < min) {
            min = time[i];
            pos = i;
        }
    }
    return pos;
}

int main() {
    int frames, pages, page[30], frame[10], time[10];
    int i, j, k, pos, faults = 0, counter = 0, flag1, flag2;

    printf("Enter number of frames: ");
    scanf("%d", &frames);

    printf("Enter number of pages: ");
    scanf("%d", &pages);

    printf("Enter the reference string:\n");
    for (i = 0; i < pages; i++) {
        scanf("%d", &page[i]);
    }

    for (i = 0; i < frames; i++) {
        frame[i] = -1;
    }

    printf("\nPage Reference String -> Frame Status\n");

    for (i = 0; i < pages; i++) {
        flag1 = flag2 = 0;

        // Check if page already exists (Hit)
        for (j = 0; j < frames; j++) {
            if (frame[j] == page[i]) {
                counter++;
                time[j] = counter; // Update recent use time
                flag1 = flag2 = 1;
                break;
            }
        }

        // Page not present (Fault)
        if (flag1 == 0) {
            for (j = 0; j < frames; j++) {
                if (frame[j] == -1) { // Empty frame
                    faults++;
                    frame[j] = page[i];
                    counter++;
                    time[j] = counter;
                    flag2 = 1;
                    break;
                }
            }
        }

        // If no empty frame, replace LRU page
        if (flag2 == 0) {
            pos = findLRU(time, frames);
            frame[pos] = page[i];
            counter++;
            time[pos] = counter;
            faults++;
        }

        // Print frame status
        printf("%2d -> ", page[i]);
        for (j = 0; j < frames; j++) {
            if (frame[j] != -1)
                printf("%2d ", frame[j]);
            else
                printf(" - ");
        }
        if (flag1 == 1)
            printf(" (Page Hit)\n");
        else
            printf(" (Page Fault)\n");
    }

    printf("\nTotal Page Faults = %d\n", faults);

    return 0;
}
