#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int main() {
    FILE *fp;
    char filename[50], line[200], pattern[50];
    int lineNo = 0, found = 0;

    printf("Enter file name: ");
    scanf("%s", filename);

    printf("Enter search pattern: ");
    scanf("%s", pattern);

    fp = fopen(filename, "r");
    if (fp == NULL) {
        printf("Cannot open file.\n");
        return 1;
    }

    while (fgets(line, sizeof(line), fp) != NULL) {
        lineNo++;
        if (strstr(line, pattern) != NULL) {
            printf("Line %d: %s", lineNo, line);
            found = 1;
        }
    }

    if (!found)
        printf("Pattern not found in the file.\n");

    fclose(fp);
    return 0;
}
